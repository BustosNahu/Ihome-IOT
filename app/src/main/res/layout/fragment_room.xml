<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:blurkit="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.RoomFragment"
    android:theme="@style/AlertDialog"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/living_pic"
        >



        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="HOLA"
            android:textSize="40sp" />

        <eightbitlab.com.blurview.BlurView
            android:layout_width="match_parent"
            android:layout_height="444dp"
            android:background="@drawable/top_radious_background"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"

            >


        </eightbitlab.com.blurview.BlurView>


    </RelativeLayout>

</FrameLayout>